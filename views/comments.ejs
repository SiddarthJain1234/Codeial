<link rel="stylesheet" href="/css/comments.css">


<div class="container mt-5 mb-5">

    <div class="row height d-flex justify-content-center align-items-center">

        <div class="col-md-7">

            <div class="card">

                <div class="p-3">

                    <h6>Comments</h6>

                </div>

                <div class="mt-3 d-flex flex-row align-items-center p-3 form-color">

                    <img src="https://animeartmagazine.com/wp-content/uploads/2022/03/1c001932607b2a9c8e10c2415319bc78.webp"
                        width="50" class="rounded-circle mr-2">
                 <form action="/comments/docomment" method="post">
                    <input type="text" class="form-control" name="comment" placeholder="Enter your comment..">
                    <input type="submit" value="Comment">    
                </form>
                </div>


                <div class="mt-2">

                   <% for(let i=0; i<comments.length; i++){%>

                    <div class="d-flex flex-row p-3">

                        <img src="https://animeartmagazine.com/wp-content/uploads/2022/03/1c001932607b2a9c8e10c2415319bc78.webp"
                            width="40" height="40" class="rounded-circle mr-3">

                        <div class="w-100">

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex flex-row align-items-center">
                                    <span class="mr-2"><%=comments[i].user.name%></span>

                                </div>
                                <small><%=comments[i].updatedAt%></small>
                            </div>

                            <p class="text-justify comment-text mb-0"><%=comments[i].content%></p>

                            <div class="d-flex flex-row user-feed">




                            </div>

                        </div>
                        <%if( (locals.user) && (locals.user.email==comments[i].user.email) ){%>
                        <a href="/comments/destroy/<%=comments[i]._id%>">Delete</a>
                        <%}%>
                    </div>


               <% }%>







                </div>

            </div>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>