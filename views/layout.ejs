<body>
    <%- include('_header'); %>

         <%- body %>

            <%- include('_footer'); %>

            <script>
              <%  if(flash.success && flash.success.length>0) { %>
                    new Noty({
                        type: 'success',
                        text: '<%=flash.success%>',
                        layout: 'topRight',
                        theme: 'relax',
                        timeout: 1000
                    }).show();
                <% } %>

                <%  if(flash.error && flash.error.length>0) { %>
                    new Noty({
                        type: 'error',
                        text: '<%=flash.error%>',
                        layout: 'topRight',
                        theme: 'relax',
                        timeout: 1000
                    }).show();
                <% } %>
            </script>


