<header>

    <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
        
    
        <button onclick="location.href='/'" style="margin-left:0.5rem;" type="button" class="btn btn-primary">Home</button>
        <% if (locals.user){ %>
            <div style="margin-left: auto; margin-right: 1rem;">
       
                <button onclick="location.href='/users/profile/<%=locals.user._id%>'" style="margin-right:0.5rem;" type="button" class="btn btn-primary"><i class="fa-solid fa-user" style="color: #ffffff;"></i> Profile</button>
                <button onclick="location.href='/users/log-out'" type="button" class="btn btn-primary">Logout</button>
            </div>

         

        <% }else{ %>

            <div style="margin-left: auto; margin-right: 1rem;">
       
                <button onclick="location.href='/users/sign-up'" style="margin-right:0.5rem;" type="button" class="btn btn-primary">Signup</button>
                <button onclick="location.href='/users/sign-in'" type="button" class="btn btn-primary">Signin</button>
            </div>

        <% } %>
    </nav>

</header>